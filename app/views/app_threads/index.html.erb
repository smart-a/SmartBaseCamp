<p id="notice"><%= notice %></p>

<h1>App Threads</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Th content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_threads.each do |app_thread| %>
      <tr>
        <td><%= app_thread.project_id %></td>
        <td><%= app_thread.th_content %></td>
        <td><%= link_to 'Show', app_thread %></td>
        <td><%= link_to 'Edit', edit_app_thread_path(app_thread) %></td>
        <td><%= link_to 'Destroy', app_thread, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App Thread', new_app_thread_path %>
