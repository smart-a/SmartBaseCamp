
<div class="signin-form">
	<div class="container h-100" >
		<% if @user.errors.any? %>
			<div class="alert alert-danger alert-dismissible fade show mt-2 m-auto" style="width:50%" role="alert">
				<a href=#  class="close" data-dismiss="alert" aria-label="Close">Ã—</a>
				<i class="fa fa-exclamation-triangle"></i> 
				<strong>Errors</strong>
				<ul>
					<% @user.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<div class="d-flex justify-content-center h-100" style="margin-top: 90px">
			<div class="user_card">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<%= image_tag 'logo', class:"brand_logo", alt:"Logo" %>
					</div>
					
				</div>
				
				<div class="d-flex justify-content-center form_container" style="margin-top: 50px">
					<div class="mt-1">
						<%= form_with(model: @user, local: true) do |f| %>
							
							<div class="input-group mb-2">
								<div class="input-group-append">
									<span class="input-group-text"><i class="fa fa-user"></i></span>
								</div>
								<%= f.text_field :firstname, autofocus: true, class: "form-control",  placeholder: "Firstname" %>
							</div>
							<div class="input-group mb-2">
								<div class="input-group-append">
									<span class="input-group-text"><i class="fa fa-user"></i></span>
								</div>
								<%= f.text_field :lastname, autofocus: true, class: "form-control",  placeholder: "Lastname"  %>
							</div>	   
							<div class="input-group mb-2">
								<div class="input-group-append">
									<span class="input-group-text"><i class="fa fa-envelope"></i></span>
								</div>
								<%= f.text_field :email, type:'email', autofocus: true, class: "form-control ",  placeholder: "Email Address"  %>
							</div>

							<div class="input-group mb-2">
								<div class="input-group-append">
									<span class="input-group-text"><i class="fa fa-key"></i></span>
								</div>
								<%= f.password_field :password, autofocus: true, class: "form-control",  placeholder: "Password"  %>
							</div>
							
							<div class="d-flex justify-content-center mt-3 login_container">
								<%= f.submit "Create", class: "btn login_btn"  %>
							</div>
						<% end %>
					</div>
				</div>
		
				<div class="mt-4">
					<div class="d-flex justify-content-center links">
						Already a member?  <%= link_to "Log in", users_login_path, class:'ml-2' %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
	

