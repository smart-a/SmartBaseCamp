<%
=begin%>
 <div class="container">
 
  <%= form_with(model: @user, local: true) do |f| %>
  
    <div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card card-signin my-5">
            <div class="card-body">
              <h5 class="card-title text-center">Create New Account</h5>
              <form class="form-signin">
                <div class="form-label-group">
                  <%= f.label :First_name %><br />
                  <%= f.text_field :first_name, autofocus: true, class: "form-control", autocomplete: "firstname" %>
                </div>
                <div class="form-label-group">
                  <%= f.label :Last_name %><br />
                  <%= f.text_field :last_name, autofocus: true, class: "form-control", autocomplete: "lastname" %>
                </div>
                <div class="form-label-group">
                  <%= f.label :Email_Address %><br />
                  <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
                </div>
                <div class="form-label-group">
                  <%= f.label :password %>
                  <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
                </div>
                
                <div class="text-center">
                    <%= f.submit "Create", class: "btn mt-3 btn-md btn-primary text-uppercase"  %>
                </div>
                <hr class="my-4">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

		

<% end %>
</div> 
<%
=end%>

<%= form_with(model: @user, local: true) do |f| %>
	<div class="container h-100">
		<div class="d-flex justify-content-center h-100">
			<div class="user_card">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<img src="https://cdn.freebiesupply.com/logos/large/2x/pinterest-circle-logo-png-transparent.png" class="brand_logo" alt="Logo">
					</div>
				</div>
				<div class="d-flex justify-content-center form_container">
					<form>
						<div class="input-group mb-3">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<%= f.label :Firstname %><br />
                            <%= f.text_field :firstname, autofocus: true, class: "form-control", autocomplete: "firstname" %>
						</div>
						<div class="input-group mb-2">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<%= f.label :Lastname %><br />
                            <%= f.text_field :lastname, autofocus: true, class: "form-control", autocomplete: "lastname" %>
						</div>

						

						<div class="input-group mb-2">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<%= f.label :Email_Address %><br />
                            <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>  
						</div>
						<div class="form-group">
							<div class="custom-control custom-checkbox">
								<%= f.label :password %>
                                <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
							</div>
						</div>
							<div class="d-flex justify-content-center mt-3 login_container">
				 	        <%= f.submit "Create", class: "btn mt-3 btn-md btn-primary text-uppercase"  %>
				        </div>
					</form>
				</div>
		
				<div class="mt-4">
					<div class="d-flex justify-content-center links">
                      <%= link_to "Log in", users_login_path %>	
					  <%
=begin%>
 <a href="login" class="signup-image-link">I am already member</a>				 
<%
=end%>
					</div>
				
				</div>
			</div>
		</div>
	</div>
	
<% end %>