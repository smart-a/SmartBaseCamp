<div class="signin-form">
                        <h2 class="form-title">Login</h2>
                        <% if !@err_msg.nil? %>
                            <div class="alert alert-warning" role="alert">
                                <%= @err_msg %>
                            </div>
                        <% end %>
<%= form_tag({action: 'signin'},{class: 'register-form'}) do %>
	<div class="container h-100">
		<div class="d-flex justify-content-center h-100">
			<div class="user_card">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<img src="https://cdn.freebiesupply.com/logos/large/2x/pinterest-circle-logo-png-transparent.png" class="brand_logo" alt="Logo">
					</div>
				</div>
				<div class="d-flex justify-content-center form_container">
					<form>
						<div class="input-group mb-3">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<label for="users_email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <%= email_field 'users', 'email', :placeholder=>"Your email" %>
						</div>
						

						

						<div class="form-group">
							<div class="custom-control custom-checkbox">
								<label for="users_password"><i class="zmdi zmdi-lock"></i></label>
                                <%= password_field 'users', 'password', :placeholder=>"Password" %>
							</div>
						</div>
							<div class="d-flex justify-content-center mt-3 login_container">
				 	        <%= submit_tag "Login", class: "btn mt-3 btn-md btn-primary text-uppercase"  %>
				        </div>
					</form>
				</div>
		
				<div class="mt-4">
					<div class="d-flex justify-content-center links">
						Don't have an account yet?  <%= link_to "Sign up", new_user_path%>
					</div>
				
				</div>
			</div>
		</div>
	</div>
	
<% end %>