

<div class="d-flex mt-5 mb-4">
    <div class="mt-1">
      <%= form_with(model: @user, local: true) do |f| %>
        
        <div class="form-group row mb-3">
          <%= f.label :firstname, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.text_field :firstname, autofocus: true, class: "form-control",  placeholder: "Firstname" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :lastname, class: "col-sm-3 col-form-label"  %>
          <div class="col-sm-9">
            <%= f.text_field :lastname, autofocus: true, class: "form-control",  placeholder: "Lastname"  %>
          </div>
        </div>	   
        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-sm-3 col-form-label"  %>
          <div class="col-sm-9">
            <%= f.text_field :email, type:'email', autofocus: true, class: "form-control ", readonly:'readonly' %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-sm-3 col-form-label"  %>
          <div class="col-sm-9">
            <%= f.password_field :password, autofocus: true, class: "form-control",  placeholder: "Password"  %>
          </div>
        </div>
        
        <div class="form-group row mb-3">
          <div class="col-sm-5 login_container">
            <%= f.submit "Update", class: "btn login_btn"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

