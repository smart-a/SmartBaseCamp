<p id="notice"><%= notice %></p>

<h1>Thread Messages</h1>

<table>
  <thead>
    <tr>
      <th>Thread</th>
      <th>Tm content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @thread_messages.each do |thread_message| %>
      <tr>
        <td><%= thread_message.thread_id %></td>
        <td><%= thread_message.tm_content %></td>
        <td><%= link_to 'Show', thread_message %></td>
        <td><%= link_to 'Edit', edit_thread_message_path(thread_message) %></td>
        <td><%= link_to 'Destroy', thread_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thread Message', new_thread_message_path %>
